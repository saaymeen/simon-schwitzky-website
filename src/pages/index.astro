//https://codepen.io/vcomics/pen/djqNrm

import profileImage from 'assets/profile-placeholder.jpg'; // Image is 1600x900

import {
	AboutSection,
	MastheadSection,
	WorkSection,
	TestimonialsSection,
	HireMeSection,
	EditorialSection,
	ScheduleCallSection,
} from '../components/sections';
import { NewsletterSection } from '../components/sections';

let renderMasthead = true;
let renderAbout = true;
let renderWork = true;
let renderTestimonials = true;
let renderNewsletter = false;
let renderHireMe = true;
let renderEditorial = true;
let renderScheduleCall = true;

if (import.meta.env.PROD) {
	renderMasthead = true;
	renderAbout = true;
	renderWork = true;
	renderTestimonials = true;
	renderNewsletter = false;
	renderHireMe = true;
	renderEditorial = true;
	renderScheduleCall = true;
}

// TODO: explain somewhere why I do not need a cookie disclaimer
---

<PageLayout title="Simon Schwitzky">
	<main class="flex-1 flex flex-col">
		{renderMasthead ? <MastheadSection /> : <div class="flex-1 pt-24" />}
		{renderAbout && <AboutSection />}
		{renderWork && <WorkSection />}
		{renderTestimonials && <TestimonialsSection />}
		{renderNewsletter && <NewsletterSection />}
		{renderHireMe && <HireMeSection />}
		{renderEditorial && <EditorialSection />}
		{renderScheduleCall && <ScheduleCallSection />}
	</main>
</PageLayout>
