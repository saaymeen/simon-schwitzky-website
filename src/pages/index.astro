import { PageLayout } from 'layouts';
import { MastheadAnimations } from 'components/react/masthead-animations';
import { Image } from 'astro:assets';
import { LuArrowRight, LuChevronDown } from 'react-icons/lu';
import { TestimonialSlider } from 'components/react/testimonial-slider';

