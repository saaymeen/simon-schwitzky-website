---
import { BaseLayout } from 'layouts';
import { Anchor, ContactInformation, RotatingCircleText, LineText, Button } from 'components/astro';
import { LuArrowDown, LuArrowUpRight, LuPhone } from 'react-icons/lu/index.js';
import { ContactForm } from 'components/react';
import { BsMailbox, BsPhone, BsWhatsapp } from 'react-icons/bs/index.js';

import profileImage from 'assets/iceland-sunset.png';
import { Image } from 'astro:assets';
import { getTranslation } from 'utils/i18n';
import type { InferGetStaticParamsType } from 'astro';

export async function getStaticPaths() {
	const pages = [{ lang: 'en' }, { lang: 'de' }];
	return pages.map(({ lang }) => ({ params: { lang } }));
}

type Params = InferGetStaticParamsType<typeof getStaticPaths>;

const currentLocale = Astro.currentLocale;
const { lang } = Astro.params as Params;

const translations = {
