---
import type { ImageMetadata } from 'astro';
import clsx from 'clsx';

interface Props extends astroHTML.JSX.LiHTMLAttributes {
	title: string;
	description: string;
	image: { src: ImageMetadata; alt: string };
	readDurationMinutes: number;
	category: string;
}

const { title, description, readDurationMinutes, category, image, class: className, ...rest } = Astro.props;
---

<li class={clsx('', className)} {...rest}>
	<a href="" class="flex flex-col">
		<div class="flex items-center space-x-3">
			<span class="self-start rounded-md bg-blue-100 px-3 py-1 text-xs text-blue-600">
				{category}
			</span>
			<span class="text-xs">
				{readDurationMinutes} min read
			</span>
		</div>
		<span class="mt-3 font-serif">{title}</span>
	</a>
</li>
