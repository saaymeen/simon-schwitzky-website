---
import clsx from 'clsx';

interface Props extends Omit<astroHTML.JSX.SVGAttributes, 'viewBox'> {
	label: string;
}

const { label, width = 200, height = 200, class: className, ...rest } = Astro.props;
---

<svg
	viewBox="0 0 200 200"
	width={width}
	height={height}
	style={{ animationDuration: '10s' }}
	class={clsx('animate-spin', className)}
	{...rest}
>
	<defs>
		<path id="circle" d="M 100, 100
			  m -75, 0
			  a 75, 75 0 1, 0 150, 0
			  a 75, 75 0 1, 0 -150, 0
			  "> </path>
	</defs>
	<text width="400">
		<textpath
			style={{ fontFamily: 'Kanit' }}
			alignment-baseline="top"
			xlink:href="#circle"
			class="text-[17px] uppercase tracking-[1.7px]"
		>
			{label}
		</textpath>
	</text>
</svg>
