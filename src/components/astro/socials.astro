---
import clsx from 'clsx';
import { BsTwitterX, BsGithub, BsLinkedin, BsInstagram } from 'react-icons/bs/index.js';

interface Props {
	className?: string;
}

const { className } = Astro.props;

const socials = [
	{
		icon: BsInstagram,
		href: '',
	},
	{
		icon: BsLinkedin,
		href: '',
	},
	{
		icon: BsTwitterX,
		href: '',
	},
	{
		icon: BsGithub,
		href: '',
	},
];
---

<ul class={clsx('flex flex-row space-x-4', className)}>
	{
		socials.map(({ icon: Icon, href }) => (
			<li>
				<a
					href={href}
					rel="noopener noreferrer"
					target="_blank"
					class="text-neutral-600 transition-colors hover:text-black"
				>
					<Icon size={24} />
				</a>
			</li>
		))
	}
</ul>
