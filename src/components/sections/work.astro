import { Marquee, Anchor } from 'components/astro';

import image from 'assets/service-1.jpg';
import { LuArrowRight, LuArrowUpRight, LuChevronDown, LuShare, LuShare2 } from 'react-icons/lu';

const projects = [
	{
		title: 'SelfieMate',
		client: 'graessler.DIGITAL',
		type: 'iOS App',
		date: 'Oct 20, 2024',
		image,
	},
	{
		title: 'DT Connect',
		client: 'druckluft-technik Chemnitz GmbH',
		type: 'Full-Stack',
		date: 'Oct 20, 2024',
		image,
	},
	{
		title: 'Skymergency',
		client: 'graessler.DIGITAL',
		type: 'iOS & Android App',
		date: 'Oct 20, 2024',
		image,
	},
];

const openSourceProjects = [
	{
		title: 'react-native-airdrop-only',
	},
	{
		title: 'react-native-airdrop-only',
	},
];

const stats = [
	{
		title: (new Date().getFullYear() - 2015).toString() + ' Jahre',
		tagline: 'Erfahrung im Tech-Sektor',
	},
	{
		title: '7 Years',
		tagline: 'as a Finance Advisor at Robobank',
	},
	{
