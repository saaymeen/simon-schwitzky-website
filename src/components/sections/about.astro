---
import { LuArrowRight } from 'react-icons/lu/index.js';
import { Anchor, RotatingCircleText } from '../astro';

import { Image } from 'astro:assets';

import profileImage from 'assets/profile-placeholder.jpg';
---

<section style={{ transform: 'translate3d(0,0,0)' }} class="flex flex-col bg-white px-4 sm:px-12">
	<div class="mx-auto flex w-full max-w-7xl flex-col pb-16 pt-24 md:grid md:grid-cols-2">
		<div class="flex flex-col">
			<div class="flex justify-between">
				<div class="flex flex-col">
					<span class="mb-1 text-neutral-600">Hi, I am Simon 👋🏻</span>
					<h2 class="text-5xl">Effortless collaboration<br />Engineer of your choice</h2>
					<p class="mt-7 max-w-md">
						I care about the work I do and the people I do it with. That's why I show up ready everyday to
						create amazing projects. I'm proud to have worked with really cool people, learning powerful
						insights along the way & gain valuable experience.
					</p>
				</div>
			</div>

			<Anchor icon={LuArrowRight} href="/contact" class="mt-7 self-start" theme="primary" size="lg">
				Hire me
			</Anchor>
		</div>

		<div class="relative mt-12 flex flex-row justify-center md:ml-12 md:mt-0">
			<div class="relative aspect-[9/16] h-72 md:h-full md:w-auto">
				<Image src={profileImage} alt="" class="absolute h-full w-full object-cover" />
				<div class="absolute bottom-0 right-0 translate-x-1/2 translate-y-1/2">
					<RotatingCircleText label="Open for new opportunities! - Hire me now! -" width={100} height={100} />
				</div>
			</div>
		</div>
	</div>
</section>
